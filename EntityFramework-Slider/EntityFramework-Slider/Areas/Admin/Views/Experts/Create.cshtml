@model Expert

@{
    ViewData["Title"] = "Create";
}

<div class="container my-5">
    <form class="forms-sample" asp-action="Create" method="post" enctype="multipart/form-data">
        <label for="formFile" class="form-label"><b>Add a new Photo</b></label>

        <input class="form-control" id="customFile" asp-for="Photo" />
        <span class="text-danger" asp-validation-for="Photo"></span>

        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Name</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Name">

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a new Position</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Profession">

        </div>
        <div class="buttons my-3">
            <button type="submit" class="btn btn-primary mr-2">Submit</button>
            <a class="btn btn-light" asp-action="Index">Cancel</a>
        </div>
    </form>
</div>

