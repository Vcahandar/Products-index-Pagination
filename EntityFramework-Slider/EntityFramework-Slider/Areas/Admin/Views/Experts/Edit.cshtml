@model Expert
@{
    ViewData["Title"] = "Edit";
}

<div class="container-fluid mx-5 my-3">
    <h3>Update Blog</h3>
    <div class="img-area">
        <img src="~/img/@Model.Image" style="height:200px;" alt="Alternate Text" />
    </div>
    <form asp-action="Edit" method="post" enctype="multipart/form-data">
        <div class="form-group my-3">
            <input style="width:300px !important" class="form-control" asp-for="Photo">
            <span class="text-danger" asp-validation-for="Photo"></span>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a Edit Name</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Name">

        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label"><b>Add a Edit Positon</b></label>
            <input class="form-control" type="text" id="formFile" asp-for="Profession">
        </div>
        <a class="btn btn-primary" asp-controller="Experts" asp-action="Index">Back</a>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
</div>




