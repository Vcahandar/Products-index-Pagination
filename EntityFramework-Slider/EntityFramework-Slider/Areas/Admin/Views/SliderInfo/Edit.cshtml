@model SliderInfoVM
@{
    ViewData["Title"] = "Edit";
}


<div class="container mt-5">
    <h1>Edit</h1>
    <div class="img-detail">
        <img class="img-fluid" src="~/img/@Model.SignatureImage" />
    </div>
    <form class="forms-sample" method="post" asp-action="Edit" enctype="multipart/form-data">
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Choose a new image </label>
            <input class="form-control" id="formFile" asp-for="SignaturePhoto">
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add title</label>
            <textarea class="form-control" asp-for="Title" rows="3" id="sliderTitle"></textarea>
        </div>
        <div class="form-group mt-5">
            <label for="formFile" class="form-label">Add description</label>
            <textarea class="form-control" asp-for="Description" rows="6" id="sliderDesc"></textarea>
        </div>
        <button type="submit" class="btn btn-primary mr-2">Submit</button>
        <button asp-action="Index" class="btn btn-dark">Cancel</button>
    </form>

</div>

@section Scripts{
    <script src="~/ckeditor/ckeditor.js"></script>
    <script>
        CKEDITOR.replace("sliderTitle")
    </script>
}
