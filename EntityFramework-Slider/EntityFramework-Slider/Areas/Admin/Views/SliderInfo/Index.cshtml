@model IEnumerable<SliderInfo>

@{
    ViewData["Title"] = "Flower";
}

<div class="container my-5">
    <a class="btn btn-success text-white" asp-action="Create" style="float:right">Create</a>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>
                        Title
                    </th>
                    <th>
                        Image
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                        Operations
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var info in Model)
                {
                    <tr>
                        <td class="py-1">
                            @Html.Raw(info.Title)
                        </td>
                          <td class="img">
                            <img src="~/img/@info.SignatureImage" />
                           </td>
                        <td class="py-1">
                            @Html.Raw(info.Description)
                        </td>


                        <td style="display:flex; gap:10px;">
                            <a class="btn btn-outline-info" asp-action="Detail" asp-route-id="@info.Id">Info</a>
                            <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@info.Id">Edit</a>
                            <form asp-action="Delete" method="post" asp-route-id="@info.Id">
                                <button type="submit" class="btn btn-outline-danger">Delete</button>
                            </form>

                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
</div>




